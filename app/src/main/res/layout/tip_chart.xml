<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTipChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:layout_margin="@dimen/default_10dp_margin"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:justificationMode="inter_word"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="aqui vai texto" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardForChartTips"
        android:layout_width="match_parent"
        android:layout_height="412dp"
        android:layout_margin="@dimen/default_10dp_margin"
        app:cardCornerRadius="@dimen/default_10dp_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTipChart">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/webViewList"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:visibility="gone" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="600dp"
        android:layout_marginStart="@dimen/default_10dp_margin"
        android:id="@+id/recyclerViewIdTipChart"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/default_10dp_margin"
        android:layout_marginEnd="@dimen/default_10dp_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTipChart"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>