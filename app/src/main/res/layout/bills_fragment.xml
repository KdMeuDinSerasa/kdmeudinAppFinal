<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default"
    tools:context=".view.BillsFragment">

    <TextView
        android:visibility="invisible"
        android:id="@+id/tvNoBills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_black"
        android:text="@string/no_bills_msg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/ivArrowDown"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/sad"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/tvNoBills"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
         />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_url="https://assets1.lottiefiles.com/packages/lf20_SyUX5x.json" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textFieldSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Digite aqui sua pesquisa:"
        app:hintTextColor="@color/black"
        android:layout_marginEnd="15dp"
        app:boxCornerRadiusTopStart="@dimen/default_10dp_margin"
        app:boxCornerRadiusBottomStart="@dimen/default_10dp_margin"
        app:boxCornerRadiusTopEnd="@dimen/default_10dp_margin"
        app:boxCornerRadiusBottomEnd="@dimen/default_10dp_margin"
        app:layout_constraintEnd_toStartOf="@+id/button_filter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_baseline_search_24">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/About"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="@string/about_label_desc"
        android:src="@drawable/ic_baseline_help_24"
        app:layout_constraintBottom_toBottomOf="@+id/textFieldSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textFieldSearch" />

    <ImageView
        android:id="@+id/button_filter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_baseline_filter_alt_24"
        app:layout_constraintBottom_toBottomOf="@+id/textFieldSearch"
        app:layout_constraintEnd_toStartOf="@+id/About"
        app:layout_constraintTop_toTopOf="@+id/textFieldSearch" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewIdNoXML"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textFieldSearch" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/tvAddBillHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/no_bills_hint"
        android:fontFamily="@font/roboto_black"
        app:layout_constraintTop_toTopOf="@id/floatButtonAddBill"
        app:layout_constraintBottom_toBottomOf="@id/floatButtonAddBill"
        app:layout_constraintRight_toLeftOf="@id/floatButtonAddBill"
        />
    <ImageView
        android:id="@+id/floatButtonAddBill"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/add_bill_label"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>